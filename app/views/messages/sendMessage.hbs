<div class="container">
    <h2>Friends</h2>
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Friends
    <span class="caret"></span></button>
        <ul class="dropdown-menu">
            {{#each result}}
                <li><a href="#">{{this.email}}</a></li>
                <li class="divider"></li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="container-fluid" style="margin-top: 5px;">
    <form method="post" action="/Messages/NewMessage">
        <div class="form-group">
            <label for="friend">Friend</label>
            <input type="email" class="form-control" id="friend" placeholder="Please input your friend's email" name="email" requied>
            <label for="message">Message:</label>
            <textarea class="form-control" rows="20" id="message" name="content"></textarea>
        </div>
        <button type="submit" id="sendbtn" class="btn btn-primary">Send</button>
    </form>
    <div class="container-fluid">
        {{#if successMessage}}
            <div class="alert alert-success" id="success">
                Sent successfully!!!
            </div>
        {{/if}}
    </div>
</div>

<script>
    $(document).ready(function() {
        $("ul.dropdown-menu a").click(function() {
            $("button.dropdown-toggle").text($(this).text());
            $("button.dropdown-toggle").append(' <span class="caret"></span>');
            $("input").val($(this).text());
        });
    });
</script>
